{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "jsx": "react",
    "allowJs": false
  },
  "include": [
    "./src",
    "./typings"
  ],
  "exclude": [
    "node_modules"
  ]
}